@using DatingApp.FrontEnd.Models.CurrentUser
@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<PageTitle>DatingApp</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="sidebar">
            <NavMenu />
        </div>
    </Authorized>
</AuthorizeView>

<div class="main-wrapper">
    @Body
</div>

@if (!NavigationManager.Uri.Contains("PrivacyPolicy", StringComparison.OrdinalIgnoreCase))
{
    <div class="footer footer-text-row">
        <p>Copyright &copy;@DateTime.Now.Year |</p>
        <a id="policy-link" class="btn-link" onclick="@OnPrivacyPolicyClick">Privacy Policy</a>
    </div>
}

@code {
    void OnPrivacyPolicyClick()
    {
        NavigationManager.NavigateTo("PrivacyPolicy");
    }
}