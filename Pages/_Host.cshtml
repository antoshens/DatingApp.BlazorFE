@page "/"
@namespace DatingApp.FrontEnd.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

 <script>
    window.WriteToken = {
        WriteToken: function (name, value) {
            sessionStorage.setItem(name, value);
        }
    }

    window.ReadToken = {
        ReadToken: function (name) {
            return sessionStorage.getItem(name);
        }
    }

    window.Animation = {
        SetAnimation: function (tagId) {
            let element = document.getElementById(tagId);
            
            if (element.classList.contains("fa-beat")) {
                element.classList.remove("fa-beat");
            }
            else {
                element.classList += " fa-beat";
            }
        }
    }

    window.OpenPhotoSelector = {
        OpenPhotoSelector: function (elementId) {
            document.getElementById(elementId).click();
        }
    }

    window.ElementClass = {
        SetClass: function (elementId, className) {
            let element = document.getElementById(elementId);
            
            if (!element.classList.contains(className)) {
                element.classList += ` ${className}`;
            }
        },
        RemoveClass: function (elementId, className) {
            let element = document.getElementById(elementId);
            
            if (element.classList.contains(className)) {
                element.classList.remove(className);
            }
        }
    }
</script>

<component type="typeof(App)" render-mode="Server" />
