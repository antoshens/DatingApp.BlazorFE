@page "/"
@namespace DatingApp.FrontEnd.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

 <script>
    window.WriteToken = {
        WriteToken: function (name, value) {
            sessionStorage.setItem(name, value);
        }
    }

    window.ReadToken = {
        ReadToken: function (name) {
            return sessionStorage.getItem(name);
        }
    }

    window.Animation = {
        SetAnimation: function (tagId) {
            let element = document.getElementById(tagId);
            console.log(element.classList)
            if (element.classList.contains("fa-beat")) {
                element.classList.remove("fa-beat");
            }
            else {
                element.classList += " fa-beat";
            }
        }
    }
</script>

<component type="typeof(App)" render-mode="Server" />
